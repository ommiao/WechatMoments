            android:layout_margin="@dimen/margin_tweet_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/txt_size_nickname"
            tools:text="oMMiao"/>

    </RelativeLayout>

</layout>
